{
    "name": "vscode-ptx-syntax",
    "displayName": "PTX Assembly Syntax",
    "description": "Nvidia PTX syntax highlighting",
    "icon": "assets/logo.png",
    "publisher": "gkarlos",
    "version": "1.0.0",
    "license": "MIT",
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "ptx",
            "aliases": ["Nvidia PTX", "ptx", "PTX"],
            "extensions": [".ptx"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "ptx",
            "scopeName": "source.ptx",
            "path": "./syntaxes/ptx.tmLanguage.json"
        }]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/gkrls/vscode-ptx-syntax"
    }
}
